* { /* Selector Universal Siempre tenemos que ponerlo*/
    margin: 0;
    padding: 0;
    border: 0;
    box-sizing: border-box;
}

html { /* Selector de etiqueta global o universal - Para modificar tamaños */

    font-size: 16px; /* 16por defecto */
}

:root { /* Selector de raíz - Este se usa para definir variables */
    --primary-color-900: #1d1d45;
    --primary-color-400: #5d79b3;
    --secondary-color-500: #F33052;

    --neutral-white: #f5f5f5;
  
    --line-default-height: 1.5

}

.Logotipo {
  margin-left: 10px;   /* Mueve el logo hacia la derecha */
  margin-top: 8px;     /* Mueve el logo hacia abajo */
  align-items: right;  /* Centra verticalmente */
}

h1 {
  text-align: center;       /* Centra el texto dentro de su contenedor */
  margin-top: 1rem;         /* Espacio desde el borde superior */
  width: 100%;              /* Asegura que ocupe todo el ancho disponible */
  margin-top: 1rem;         /* Espacio superior opcional */
}

.navbar {
  position: relative;              /* Ya no es fixed para evitar que tape el contenido */
  display: flex;
  flex-direction: column;         /* Apila logo, título y menú verticalmente */
  align-items: center;            /* Centra horizontalmente */
  padding: 2rem 0;
  background-color: #ffffff;
  backdrop-filter: blur(20px);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

/* Estilo del menú */
.navbar-items {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 2rem;
  list-style: none;
  margin-top: 1rem;
}

/* Estilo de los enlaces */
.navbar-item a {
  text-decoration: none;
  color: var(--primary-color-900);
  font-weight: 500;
  transition: color 0.3s ease;
}

.navbar-item a:hover {
  color: var(--secondary-color-500);
}

/* Sección HERO con imagen alineada a la derecha */
.hero {
  display: flex;                      /* Alinea texto e imagen en fila */
  justify-content: space-between;    /* Separa texto a la izquierda e imagen a la derecha */
  align-items: center;               /* Centra verticalmente */
  background-color: #0b0d2f;         /* Fondo negro */
}

/* Contenedor de texto */
.hero-text {
  flex: 1;                           /* Ocupa el espacio disponible */
  padding-left: 3cm;
  color: #f8f8f8;
}

/* Imagen visible, más pequeña y completa */
.hero-img {
  width: 55%;                      /* Tamaño reducido */
  height: auto;                    /* Mantiene proporción original */
  object-fit: cover;               /* Asegura que se vea completa sin recorte */
}
